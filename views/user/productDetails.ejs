<%- include("../layouts/header") %>
<%- include("../layouts/nav") %>
<body>
    <!--================Single Product Area =================-->
    <div class="product_image_area">
        <div class="container">
            <div class="row s_product_inner">
                <div class="col-lg-6">
                    <div class="img-zoom-container">
                        <img id="mainProductImage" src="/productimages/<%= product.image[0] %>" alt="Main Product Image" class="img-fluid rounded shadow-sm">
                        <div id="myresult" class="img-zoom-result"></div>
                    </div>
                    <div class="thumb-img-container mt-3 d-flex justify-content-center">
                        <% product.image.forEach((image, index) => { %>
                            <div class="thumb-img-wrap">
                                <img src="/productimages/<%= image %>" alt="Product Thumbnail" class="thumb-img img-thumbnail mx-1 <%= index === 0 ? 'active' : '' %>" data-image="/productimages/<%= image %>">
                            </div>
                        <% }) %>
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <div class="s_product_text">
                        <h3><%= product.productName %></h3>
                        <!-- Display Price -->
                        <% if (product.offerPrice && product.price > product.offerPrice) { %>
                            <h2>₹ <%= product.offerPrice %></h2>
                            <h4 class="text-muted"><del>₹ <%= product.price %></del></h4>
                        <% } else { %>
                            <h2>₹ <%= product.price %></h2>
                        <% } %>
                
                        <!-- Product Details List -->
                        <ul class="list">
                            <li><a class="active" href="#"><span>Category</span> : <%= product.category.categoryName %></a></li>
                            <li><a href="#"><span>Availability</span> :
                                <% if (product.stock >= 10) { %>
                                    <span class="badge badge-success">In Stock</span>
                                <% } else if (product.stock > 0) { %>
                                    <span class="badge badge-warning">Only <%= product.stock %> left in stock</span>
                                <% } else { %>
                                    <span class="badge badge-danger">Out of Stock</span>
                                <% } %>
                            </a></li>
                            <li><a href="#"><span>Brand</span> : <%= product.brand.brandsName %></a></li>
                            <li><a href="#"><span>Gender</span> : <%= product.gender %></a></li>
                        </ul>
                        <!-- Product Description -->
                        <p><%= product.productDec %></p>
                
                        <!-- Action Buttons -->
                        <div class="card_area d-flex align-items-center">
                            <a class="primary-btn" href="#" data-product-id="<%= product._id %>" data-product-stock="<%= product.stock %>" onclick="addToCart('<%= product._id %>')">Add to Cart</a>
                            <a class="icon_btn" href="#"><i class="lnr lnr-diamond"></i></a>
                            <a class="icon_btn" href="#" onclick="toggleWishlist('<%= product._id %>')" id="wishlist-button"><i class="lnr lnr-heart" id="wishlist-icon"></i></a>
                        </div>
                        

                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <br><br><br><br>
    <!--================End Single Product Area =================-->

    <%- include("../layouts/footer.ejs") %>
 
    <script>
        // Image Zoom Functionality
        function imageZoom(imgID, resultID) {
            var img, lens, result, cx, cy;
            img = document.getElementById(imgID);
            result = document.getElementById(resultID);
            lens = document.createElement("DIV");
            lens.setAttribute("class", "img-zoom-lens");
            img.parentElement.insertBefore(lens, img);
            cx = result.offsetWidth / lens.offsetWidth;
            cy = result.offsetHeight / lens.offsetHeight;
            result.style.backgroundImage = "url('" + img.src + "')";
            result.style.backgroundSize = (img.width * cx) + "px " + (img.height * cy) + "px";
            lens.addEventListener("mousemove", moveLens);
            img.addEventListener("mousemove", moveLens);
            lens.addEventListener("touchmove", moveLens);
            img.addEventListener("touchmove", moveLens);
    
            function moveLens(e) {
                var pos, x, y;
                e.preventDefault();
                pos = getCursorPos(e);
                x = pos.x - (lens.offsetWidth / 2);
                y = pos.y - (lens.offsetHeight / 2);
                if (x > img.width - lens.offsetWidth) {x = img.width - lens.offsetWidth;}
                if (x < 0) {x = 0;}
                if (y > img.height - lens.offsetHeight) {y = img.height - lens.offsetHeight;}
                if (y < 0) {y = 0;}
                lens.style.left = x + "px";
                lens.style.top = y + "px";
                result.style.backgroundPosition = "-" + (x * cx) + "px -" + (y * cy) + "px";
            }
    
            function getCursorPos(e) {
                var a, x = 0, y = 0;
                e = e || window.event;
                a = img.getBoundingClientRect();
                x = e.pageX - a.left;
                y = e.pageY - a.top;
                x = x - window.pageXOffset;
                y = y - window.pageYOffset;
                return {x : x, y : y};
            }
        }
        imageZoom("mainProductImage", "myresult");
        document.querySelectorAll('.thumb-img-wrap').forEach((thumbContainer) => {
            const thumbImg = thumbContainer.querySelector('.thumb-img');
            const mainImg = document.getElementById('mainProductImage');
    
            thumbContainer.addEventListener('click', () => {
                mainImg.src = thumbImg.dataset.image;
                document.querySelectorAll('.thumb-img').forEach(img => img.classList.remove('active'));
                thumbImg.classList.add('active');
     
                imageZoom("mainProductImage", "myresult");
            });
        });
    
 
function addToCart(productId) {
    axios.post('/addcart', { productId: productId })
        .then(function (response) {
            console.log(response.data);
            window.location.href = '/cart';
        })
        .catch(function (error) {
            console.error('Error adding to cart:', error);
            if (error.response && error.response.status === 400) {
                const errorMessage = error.response.data;
 
                if (errorMessage === 'Product is out of stock') {
                    Swal.fire({
                        icon: 'error',
                        title: 'Out of Stock',
                        text: 'This product is currently out of stock.',
                    });
                }
                else if (errorMessage === 'Product already exists in cart') {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Product in Cart',
                        text: 'This product is already in your cart.',
                    });
                }
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'There was an issue adding the product to your cart.',
                });
            }
        });
};


            
    // Toggle Wishlist Functionality
function toggleWishlist(productId) {
    axios.post('/wishlist/add', null, { params: { productId: productId } })
        .then(function (response) {
            const icon = document.getElementById('wishlist-icon');
            if (response.data.success) {
                // Toggle the icon to reflect the updated wishlist status
                icon.classList.toggle('lnr-heart');
                icon.classList.toggle('lnr-heart-o'); // Use an alternative icon to represent "added to wishlist"
                
                // Show success message
                Swal.fire({
                    icon: 'success',
                    title: response.data.message,
                }).then(() => {
                    // Redirect to the wishlist page
                    window.location.href = '/wishlist';
                });
            } else {
                // Show warning message
                Swal.fire({
                    icon: 'warning',
                    title: response.data.message,
                });
            }
        })
        .catch(function (error) {
            console.error('Error toggling wishlist:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to update wishlist.',
            });
        });
}

    </script>

<style>
    * {box-sizing: border-box;}

    /* Main Image Zoom Styling */
    .img-zoom-container {
        position: relative;
        text-align: center;
        margin-bottom: 20px;
    }

    .img-zoom-lens {
        position: absolute;
        border: 1px solid #d4d4d4;
        width: 40px;
        height: 40px;
        cursor: none; /* Hide the default cursor */
        background-color: rgba(255, 255, 255, 0.4); /* Optional: light white overlay */
    }

    .img-zoom-result {
        border: 1px solid #d4d4d4;
        width: 300px;
        height: 300px;
        margin-left: 20px;
    }

    /* Thumbnail Image Styling */
    .thumb-img-container {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .thumb-img-wrap {
        cursor: pointer;
        flex: 1 0 auto;
    }

    .thumb-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        transition: all 0.3s ease;
    }

    .thumb-img.active {
        border: 2px solid #007bff;
        opacity: 1;
    }

    .thumb-img:hover {
        opacity: 0.7;
    }

    .swal2-icon-custom {
        font-size: 8px !important;
    }

    .swal2-content-custom {
        font-size: 5px !important;
        font-family: 'Poppins-Regular';
    }
</style>
