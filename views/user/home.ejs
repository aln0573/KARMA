	<!-- start product Area -->
	<section>
		<!-- single product slide -->
		<div class="single-product-slider">
		  <div class="container">
			<div class="row justify-content-center">
			  <div class="col-lg-6 text-center">
				<div class="section-title">
				  <h1>Latest Products</h1>
				</div>
			  </div>
			</div>
			<div class="row">
				<!-- Single product -->
				<% products.forEach(product => { %>
				  <div class="col-lg-3 col-md-6">
					<div class="single-product position-relative">
					  <% if (product.offerPrice && product.price > product.offerPrice) { 
						const discountPercentage = Math.floor(((product.price - product.offerPrice) / product.price) * 100); 
					  %>
						<div class="discount-badge">
						  <span><%= discountPercentage %>%</span>
						</div>
					  <% } %>
					  <img class="img-fluid product-image" id="product-<%= product._id %>" src="/productimages/<%= product.image[0] %>" alt="<%= product.productName %>">
			  
					  <div class="product-details">
						<h6><%= product.productName %></h6>
						<div class="price">
						  <% if (product.offerPrice) { %>
							<h6 style="color: #FF6C00;">₹<%= product.offerPrice %></h6>
							<h6 class="l-through">₹<%= product.price %></h6>
						  <% } else { %>
							<h6>₹<%= product.price %></h6>
						  <% } %>
						</div>
						<div class="prd-bottom">
							<a href="#" onclick="addToCart('<%= product._id %>', event)" class="social-info">
								<span class="ti-bag"></span>
								<p class="hover-text">Add to bag</p>
							</a>
						  <a href="/wishlist/<%= product._id %>" class="social-info">
							<span class="lnr lnr-heart"></span>
							<p class="hover-text">Wishlist</p>
						  </a>
						  <a href="/compare/<%= product._id %>" class="social-info">
							<span class="lnr lnr-sync"></span>
							<p class="hover-text">Compare</p>
						  </a>
						  <a href="/products/<%= product._id %>" class="social-info">
							<span class="lnr lnr-move"></span>
							<p class="hover-text">View more</p>
						  </a>
						</div>
					  </div>
					</div>
				  </div>
				<% }); %>
			  </div>
			  
		  </div>
		</div>
	</section>

	<style>
		.single-product {
		  position: relative; /* Make sure the badge can be positioned relative to the product */
		}
	  
		.discount-badge {
		  position: absolute;
		  top: 10px; /* Adjust the top position as needed */
		  left: 10px; /* Adjust the left position as needed */
		  background: #FF6C00; /* Badge color */
		  color: white;
		  padding: 5px 10px;
		  border-radius: 5px;
		  font-weight: bold;
		  font-size: 14px;
		}
	  </style>
	
	<!-- Script to handle click on product image -->
	<script>
		document.querySelectorAll('.product-image').forEach(image => {
			image.addEventListener('click', function() {
				// Extract product id from the image id
				const productId = this.id.split('-')[1];
				// Redirect to the product details page
				window.location.href = `/productDetails?productId=${productId}`;
			});
		});

   

        axios.post('/addcart', { productId: productId })
            .then(function (response) {
                console.log(response.data);
                Swal.fire({
                    icon: 'success',
                    title: 'Product added to cart successfully!',
                    customClass: {
                        icon: 'swal2-icon-custom',
                        content: 'swal2-content-custom',
                    }
                }).then(() => {
                    // Optionally redirect to the cart page
                    window.location.href = '/cart';
                });
            })
            .catch(function (error) {
                console.error('Error adding to cart:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: error.response?.data?.message || 'The product is already in the cart.',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'OK'
                });
            });
 
	</script>
	
