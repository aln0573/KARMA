    .btn {
        font-size: 14px;
        font-weight: 600;
        padding: 8px 12px;
        border-radius: 4px;
        display: flex;
        align-items: center;
        transition: transform 0.3s, box-shadow 0.3s;
        text-decoration: none;
        color: #fff;
    }

    /* Add to Cart button */
    .add-to-cart {
        background: linear-gradient(45deg, #FFBA00, #FF6C00);
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .add-to-cart:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }

    /* Out of Stock button */
    .out-of-stock {
        background-color: #6c757d;
        border: none;
        color: #fff;
    }

    .out-of-stock:hover {
        transform: scale(1);
        background-color: #5a6268;
    }

