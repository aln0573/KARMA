<%- include("../layouts/header") %>
<%- include("../layouts/nav") %>

<style>
    /* Custom styles for the reset password page */
    .formContainer {
        background-color: #f8f9fa; /* Light grey background */
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        border-radius: 10px;
    }
    
    .title h3 {
        font-family: 'Poppins-SemiBold', sans-serif;
        color: #343a40; /* Dark grey text */
    }

    .form-control {
        height: 45px;
        font-size: 16px;
        border-radius: 25px;
        padding-left: 20px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #17a2b8; /* Light blue border on focus */
        box-shadow: 0px 0px 5px rgba(23, 162, 184, 0.5); /* Subtle shadow on focus */
    }

    .btn {
        font-family: 'Poppins-SemiBold', sans-serif;
        background: linear-gradient(45deg, #32CD32, #006400); /* Green gradient background */
        border: none;
        padding: 10px 20px;
        transition: background 0.3s ease;
    }

    .btn:hover {
        background: linear-gradient(45deg, #006400, #32CD32); /* Inverted gradient on hover */
    }

    #password-error {
        font-size: 14px;
    }
</style>

<div class="container pb-xl-5 pt-xl-1">
    <div class="row justify-content-center center-div">
        <div class="col-md-6 col-lg-5">
            <div class="formContainer border border-dark py-4 px-4">
                <div class="title pb-3 text-center">
                    <h3>Reset your password</h3>
                </div>

                <!-- Reset password form -->
                <form id="resetForm" action="/reset-password" method="POST">
                    <input type="hidden" name="token" value="<%= token %>">
                    <div class="form-group">
                        <label for="password">New Password</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                        <div id="password-error" class="text-danger d-none">Password must be at least 5 characters long and cannot start with a space or dot.</div>
                    </div>
                    <button id="submitBtn" type="submit" class="btn btn-info rounded-pill w-100 mt-4" style="background: linear-gradient(45deg, #FFBA00, #FF6C00); border: none;">Reset Password</button>
                </form>
            </div>  
        </div>
    </div>
</div>

<%- include("../layouts/footer.ejs") %>

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('resetForm');
    const passwordInput = document.getElementById('password');
    const passwordError = document.getElementById('password-error');

    form.addEventListener('submit', async (event) => {
        event.preventDefault();

        const password = passwordInput.value.trim();

        // Password validation
        const passwordRegex = /^(?!\s|\.)[a-zA-Z0-9._%+-]{5,}$/;
        if (!passwordRegex.test(password)) {
            passwordInput.classList.add('is-invalid');
            passwordError.classList.remove('d-none');
            return;
        } else {
            passwordInput.classList.remove('is-invalid');
            passwordError.classList.add('d-none');
        }
    
        try {
            const formData = {
                token: form.querySelector('input[name="token"]').value,
                password: passwordInput.value,
            };

            const response = await fetch('/reset-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData),
            });

            const data = await response.json();
            console.log('Server response:', data); // Log response data

            if (response.ok) {
                Swal.fire({
                    title: 'Password Reset',
                    text: data.message,
                    icon: 'success',
                }).then(() => {
                    window.location.href = '/login';
                });
            } else {    
                Swal.fire({
                    title: 'Oops',
                    text: data.message,
                    icon: 'error',
                });
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                title: 'Server Error',
                text: 'Failed to reset password. Please try again later.',
                icon: 'error',
            });
        }
    });
});


</script>
