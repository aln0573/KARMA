  }

  .table th,
  .table td:nth-child(3) {
    width: 20%;
  }

  .table th,
  .table td:nth-child(4) {
    width: 30%;
  }
  .swal2-popup {
    font-size: 14px;
    max-width: 320px;
    padding: 1.16rem;
    max-height: 300px !important;
  }

  .swal2-title {
    font-size: 15px !important; 
  }

  .swal2-content {
    font-size: 12px !important;
  }

  .swal2-confirm,
  .swal2-cancel {
    padding: 8px 16px;
    font-size: 14px;
  }
  .swal2-icon.swal2-warning {
    font-size: 10px;
  }

  .gradient-btn {
    width: 100px;
    background: linear-gradient(45deg, #FFBA00, #FF6C00);
    border: none;
